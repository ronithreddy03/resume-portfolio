---
import { siteConfig } from "../config";

// Calculate word count
const wordCount = siteConfig.aboutMe.split(/\s+/).filter(word => word.length > 0).length;
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4 animate-fade-in-left">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
        >
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full bg-gradient-to-r from-blue-500 to-purple-600"
        >
        </div>
        
        <!-- Word Count Display -->
        <div class="flex items-center gap-2 text-sm text-gray-500 mt-4 p-3 bg-gray-50 rounded-lg border border-gray-200">
          <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span class="font-medium">{wordCount} words</span>
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8 animate-fade-in-right">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600">
          {siteConfig.aboutMe}
        </p>
      </div>
    </div>
  </div>
</section>
