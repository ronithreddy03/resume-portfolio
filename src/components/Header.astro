---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-8 py-4">
    <!-- Desktop Navigation -->
    <ul class="hidden md:flex items-center gap-8 justify-center">
      <li>
        <a
          href="#about"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          About
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          href="#experience"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          Experience
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-green-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          href="#skills"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          Skills
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-purple-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          href="#education"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          Education
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          href="#projects"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          Projects
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-emerald-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          href="#personal"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          Personal
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-pink-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a
          href="#stats"
          class="text-gray-700 hover:text-black transition-all duration-300 font-medium relative group"
        >
          Stats
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-cyan-500 transition-all duration-300 group-hover:w-full"></span>
        </a>
      </li>
    </ul>

    <!-- Mobile Navigation -->
    <div class="md:hidden flex items-center justify-between">
      <div class="text-lg font-bold text-gray-900">Ronith Reddy P</div>
      <button
        id="mobile-menu-button"
        class="p-2 rounded-lg text-gray-700 hover:bg-gray-100 transition-colors duration-300"
        aria-label="Toggle mobile menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4">
      <ul class="space-y-2">
        <li>
          <a
            href="#about"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            About
          </a>
        </li>
        <li>
          <a
            href="#experience"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            Experience
          </a>
        </li>
        <li>
          <a
            href="#skills"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            Skills
          </a>
        </li>
        <li>
          <a
            href="#education"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            Education
          </a>
        </li>
        <li>
          <a
            href="#projects"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            Projects
          </a>
        </li>
        <li>
          <a
            href="#personal"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            Personal
          </a>
        </li>
        <li>
          <a
            href="#stats"
            class="block px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300"
          >
            Stats
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Header scroll effect
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm", "shadow-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm", "shadow-sm");
    }
  });

  // Mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
        
        // Update button icon
        const icon = mobileMenuButton.querySelector("svg");
        if (icon) {
          if (mobileMenu.classList.contains("hidden")) {
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          } else {
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
          }
        }
      });

      // Close mobile menu when clicking on links
      const mobileLinks = mobileMenu.querySelectorAll("a");
      mobileLinks.forEach(link => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
          const icon = mobileMenuButton.querySelector("svg");
          if (icon) {
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
          }
        });
      });
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
