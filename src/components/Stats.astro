<script>
  // Live age calculation with real-time updates including milliseconds
  function updateLiveAge() {
    const birthDate = new Date('2001-06-03'); // June 3, 2001
    const now = new Date();
    const ageInMilliseconds = now.getTime() - birthDate.getTime();
    const ageInYears = ageInMilliseconds / (365.25 * 24 * 60 * 60 * 1000);
    const age = ageInYears.toFixed(12); // Show 12 decimal places for extreme precision including milliseconds
    
    const ageElement = document.getElementById('live-age');
    if (ageElement) {
      ageElement.textContent = age;
    }
  }

  // Update immediately
  updateLiveAge();
  
  // Update every 100ms for millisecond precision
  setInterval(updateLiveAge, 100);
</script>
