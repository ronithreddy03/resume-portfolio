---
import { siteConfig } from "../config";
---

<section id="skills" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4 animate-fade-in-left">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Skills
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full bg-gradient-to-r from-purple-500 to-pink-600"
        />
        <p class="mt-4 text-lg text-gray-600">
          Technical expertise and professional competencies
        </p>
      </div>

      <div class="lg:col-span-8 animate-fade-in-right">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Data Center & Hardware -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.1s">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
              Data Center & Hardware
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">Rack & Stack</span>
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">Hardware Installation</span>
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">Structured Cabling</span>
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">Fiber Optics</span>
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">UPS/Power Systems</span>
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">Break/Fix</span>
              <span class="px-3 py-2 bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 rounded-lg text-sm font-medium hover:from-blue-100 hover:to-blue-200 transition-all duration-300 hover:scale-105 border border-blue-200">Inventory Management</span>
            </div>
          </div>

          <!-- Networking -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.2s">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full"></div>
              Networking
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">VPN</span>
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">DHCP</span>
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">DNS</span>
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">TCP/IP</span>
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">VLANs</span>
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">Routers</span>
              <span class="px-3 py-2 bg-gradient-to-r from-green-50 to-green-100 text-green-800 rounded-lg text-sm font-medium hover:from-green-100 hover:to-green-200 transition-all duration-300 hover:scale-105 border border-green-200">Load Balancing</span>
            </div>
          </div>

          <!-- Systems & Cloud -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.3s">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
              Systems & Cloud
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">Linux/Unix</span>
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">Windows Server</span>
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">Active Directory</span>
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">AWS</span>
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">Oracle Cloud</span>
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">Hyper-V</span>
              <span class="px-3 py-2 bg-gradient-to-r from-purple-50 to-purple-100 text-purple-800 rounded-lg text-sm font-medium hover:from-purple-100 hover:to-purple-200 transition-all duration-300 hover:scale-105 border border-purple-200">VMware</span>
            </div>
          </div>

          <!-- Scripting & Automation -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.4s">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
              Scripting & Automation
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-2 bg-gradient-to-r from-orange-50 to-orange-100 text-orange-800 rounded-lg text-sm font-medium hover:from-orange-100 hover:to-orange-200 transition-all duration-300 hover:scale-105 border border-orange-200">Python</span>
              <span class="px-3 py-2 bg-gradient-to-r from-orange-50 to-orange-100 text-orange-800 rounded-lg text-sm font-medium hover:from-orange-100 hover:to-orange-200 transition-all duration-300 hover:scale-105 border border-orange-200">Bash</span>
              <span class="px-3 py-2 bg-gradient-to-r from-orange-50 to-orange-100 text-orange-800 rounded-lg text-sm font-medium hover:from-orange-100 hover:to-orange-200 transition-all duration-300 hover:scale-105 border border-orange-200">PowerShell</span>
              <span class="px-3 py-2 bg-gradient-to-r from-orange-50 to-orange-100 text-orange-800 rounded-lg text-sm font-medium hover:from-orange-100 hover:to-orange-200 transition-all duration-300 hover:scale-105 border border-orange-200">SQL</span>
              <span class="px-3 py-2 bg-gradient-to-r from-orange-50 to-orange-100 text-orange-800 rounded-lg text-sm font-medium hover:from-orange-100 hover:to-orange-200 transition-all duration-300 hover:scale-105 border border-orange-200">Power BI</span>
            </div>
          </div>

          <!-- Monitoring & Tools -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.5s">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <div class="w-2 h-2 bg-indigo-500 rounded-full"></div>
              Monitoring & Tools
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-2 bg-gradient-to-r from-indigo-50 to-indigo-100 text-indigo-800 rounded-lg text-sm font-medium hover:from-indigo-100 hover:to-indigo-200 transition-all duration-300 hover:scale-105 border border-indigo-200">ServiceNow</span>
              <span class="px-3 py-2 bg-gradient-to-r from-indigo-50 to-indigo-100 text-indigo-800 rounded-lg text-sm font-medium hover:from-indigo-100 hover:to-indigo-200 transition-all duration-300 hover:scale-105 border border-indigo-200">Jira</span>
              <span class="px-3 py-2 bg-gradient-to-r from-indigo-50 to-indigo-100 text-indigo-800 rounded-lg text-sm font-medium hover:from-indigo-100 hover:to-indigo-200 transition-all duration-300 hover:scale-105 border border-indigo-200">Zabbix</span>
              <span class="px-3 py-2 bg-gradient-to-r from-indigo-50 to-indigo-100 text-indigo-800 rounded-lg text-sm font-medium hover:from-indigo-100 hover:to-indigo-200 transition-all duration-300 hover:scale-105 border border-indigo-200">PRTG</span>
              <span class="px-3 py-2 bg-gradient-to-r from-indigo-50 to-indigo-100 text-indigo-800 rounded-lg text-sm font-medium hover:from-indigo-100 hover:to-indigo-200 transition-all duration-300 hover:scale-105 border border-indigo-200">VirtualBox</span>
            </div>
          </div>

          <!-- Professional -->
          <div class="space-y-4 animate-fade-in-up" style="animation-delay: 0.6s">
            <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <div class="w-2 h-2 bg-gray-500 rounded-full"></div>
              Professional
            </h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-2 bg-gradient-to-r from-gray-50 to-gray-100 text-gray-800 rounded-lg text-sm font-medium hover:from-gray-100 hover:to-gray-200 transition-all duration-300 hover:scale-105 border border-gray-200">Preventive Maintenance</span>
              <span class="px-3 py-2 bg-gradient-to-r from-gray-50 to-gray-100 text-gray-800 rounded-lg text-sm font-medium hover:from-gray-100 hover:to-gray-200 transition-all duration-300 hover:scale-105 border border-gray-200">Incident Management</span>
              <span class="px-3 py-2 bg-gradient-to-r from-gray-50 to-gray-100 text-gray-800 rounded-lg text-sm font-medium hover:from-gray-100 hover:to-gray-200 transition-all duration-300 hover:scale-105 border border-gray-200">Escalation Handling</span>
              <span class="px-3 py-2 bg-gradient-to-r from-gray-50 to-gray-100 text-gray-800 rounded-lg text-sm font-medium hover:from-gray-100 hover:to-gray-200 transition-all duration-300 hover:scale-105 border border-gray-200">SOP/MOP Documentation</span>
              <span class="px-3 py-2 bg-gradient-to-r from-gray-50 to-gray-100 text-gray-800 rounded-lg text-sm font-medium hover:from-gray-100 hover:to-gray-200 transition-all duration-300 hover:scale-105 border border-gray-200">Customer Support</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
